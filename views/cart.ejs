<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css"> <!-- Link to custom CSS -->
  <title>Tradex - Cart</title>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Tradex</a>
  </nav>

  <div class="container my-5">
    <h2>Your Cart</h2>
    <ul class="list-group">
      <% cart.forEach(item => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= item.name %> - $<%= item.price %>
          <form action="/remove-from-cart" method="POST" class="ml-auto">
            <input type="hidden" name="productId" value="<%= item.id %>">
            <button type="submit" class="btn btn-danger">Remove</button>
          </form>
        </li>
      <% }) %>
    </ul>
    <h3 class="mt-3">Total: $<%= total %></h3>
    <a href="/checkout" class="btn btn-success mt-3">Proceed to Checkout</a>
  </div>
</body>
</html>
